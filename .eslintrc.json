{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "plugins": [
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "ignorePatterns": ["docs/**/*", "coverage/**/*", "dist/**/*"],
  "rules": {
    "one-var": [
      "error",
      "never"
    ],
    "prefer-const": "error",
    "no-console": "error",
    "semi": "error",
    "no-unused-vars": "error",
    "space-before-function-paren": [
      "error",
      "always"
    ],
    "keyword-spacing": "error",
    "space-before-blocks": "error",
    "no-var": "error",
    "array-bracket-newline": [
      "error",
      "consistent"
    ],
    "semi-spacing": "error",
    "no-constant-condition": "off",
    "quotes": [
      "error",
      "single"
    ],
    "space-infix-ops": "error",
    "camelcase": "error",
    "new-cap": "error",
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "brace-style": "error",
    "no-multi-spaces": "error",
    "key-spacing": [
      "error",
      {
        "afterColon": true,
        "align": "colon"
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "*",
        "next": "return"
      },
      {
        "blankLine": "always",
        "prev": "block-like",
        "next": "*"
      },
      {
        "blankLine": "always",
        "prev": "*",
        "next": "block-like"
      }
    ]
  }
}
